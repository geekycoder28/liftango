{
  "extends": ["prettier"],
  "plugins": ["react-hooks"],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  },
  "parserOptions": { "ecmaVersion": 2017, "sourceType": "module" }
}
